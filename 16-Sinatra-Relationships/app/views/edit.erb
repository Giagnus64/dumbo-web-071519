<h1>Editing Form</h1>


<form action="/students/<%= @student.id %>" method="POST">

  <input type="hidden" name="_method" value="PATCH">

  <label for="student_name">Name:</label>
  <input type="text" name="student[name]" id="student_name" value="<%= @student.name %>">

  <label for="student_age">Age:</label>
  <input type="number" name="student[age]" id="student_age" value="<%= @student.age %>">

  <label for="student_hometown">Hometown:</label>
  <input type="text" name="student[hometown]" id="student_hometown" value="<%= @student.hometown %>">

  <input type="submit" name="submit" id="submit" value="Edit Student!">
</form>
